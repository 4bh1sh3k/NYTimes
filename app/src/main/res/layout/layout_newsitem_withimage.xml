<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_margin="@dimen/default_card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/media"
            android:contentDescription="@string/media_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageSmallHeight" />

        <TextView
            android:id="@+id/title"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_card_margin"
            android:layout_marginStart="@dimen/default_card_margin"
            android:layout_marginEnd="@dimen/default_card_margin"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_card_margin"
            android:layout_marginStart="@dimen/default_card_margin"
            android:layout_marginEnd="@dimen/default_card_margin"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_card_margin"
            android:layout_marginEnd="@dimen/default_card_margin"
            android:layout_marginBottom="@dimen/default_card_margin"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>