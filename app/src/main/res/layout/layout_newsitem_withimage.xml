<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageSmallHeight"
            android:contentDescription="@string/media_description"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_full_margin"
            android:layout_marginTop="@dimen/default_full_margin"
            android:layout_marginEnd="@dimen/default_full_margin"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorSecondary"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_full_margin"
            android:layout_marginTop="@dimen/default_full_margin"
            android:layout_marginEnd="@dimen/default_full_margin"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_full_margin"
            android:layout_marginEnd="@dimen/default_full_margin"
            android:layout_marginBottom="@dimen/default_full_margin"
            android:textAppearance="?attr/textAppearanceCaption"
            tools:text="@tools:sample/date/mmddyy" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>